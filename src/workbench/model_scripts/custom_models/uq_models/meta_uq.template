# Template Placeholders
TEMPLATE_PARAMS = {
    "id_column": "{{id_column}}",
    "features": "{{feature_list}}",
    "target": "{{target_column}}",
    "train_all_data": "{{train_all_data}}",
    "track_columns": "{{track_columns}}"
